<h1>Sign up</h1>
  <div class="row">
    <div class="boxes">
      <%= form_for (@user) do |f| %>
        <%= render 'shared/error_messages' %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-contorl' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-contorl' %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-contorl' %>
        
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-contorl' %>
        
        <%= f.submit "Create my account", class: "submit_button" %>
      <% end %>
    </div>
  </div>