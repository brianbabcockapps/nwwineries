
<h1>New Winery</h1>
  
  <div class="new_form">
  <%= form_for(@winery) do |f| %>
    <div class="both">
      <div class="left"><%= f.label :name %><br/>
      <%= f.text_field :name %></div>
      
      <div class="right"><%= f.label :tasting_room_hours %><br/>
      <%= f.text_field :tasting_room_hours %></div>
      
      <div class="left"><%= f.label :seasonal %><br/>
      <%= f.text_field :seasonal %></div>
      
      <div class ="right"><%= f.label :tasting_room_cost, "Cost:" %><br/>
      <%= f.text_field :tasting_room_cost %></div>

      <div class="left"><%= f.label :price_range, "Price Range:" %><br/>
      <%= f.text_field :price_range %></div>
      
      <div class="right"><%= f.label :reigon %><br/>
      <%= f.text_field :reigon %></div>
    </div>

    <div class="address_all"><%= f.label :street_address_1 %><br/>
    <%= f.text_field :street_address_1 %></div>
      
    <div class="address_all"><%= f.label :street_address_2 %><br/>
    <%= f.text_field :street_address_2 %></div>
      
    <div class="address">
      <div class="address_left"><%= f.label :city %></div>
      <div class="address_left"><%= f.text_field :city %></div>
      
      <div class="address_middle"><%= f.label :state %></div>
      <div class="address_middle"><%= f.text_field :state %></div>
      
      <div class="address_right"><%= f.label :zip %></div>
      <div class="address_right"><%= f.text_field :zip %></div>
    </div>
      
    <div class="address_all">
      <div class="left"><%= f.label :phone %><br/>
      <%= f.text_field :phone %></div>
    </div>

    <p><%= f.label :description, "Main Text" %><br/>
    <%= f.text_area :description, class: "winery_paragraph" %></p>
    
    <p><%= f.submit "Save changes", class: "btn btn-primary" %></p>
  <% end %> 
  </div>

