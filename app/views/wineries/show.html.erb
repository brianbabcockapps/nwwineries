<h1><%= @winery.name %></h1>
<br/><span id="reigon"><%= @winery.reigon %></span>

<h3>Quick Info</h3>
<ul class="winery_description">
  <li>Hours - <%= @winery.tasting_room_hours %></li>
  <li>Tasting Room Cost - <%= @winery.tasting_room_cost %></li>
  <li>Wine Cost - <%= @winery.price_range %></li>
</ul>

<div id="map"></div>


<h3>Contact Info</h3>
<ul class="winery_contact">
  <li><%= @winery.street_address_1 %> <%= @winery.street_address_2 %></li>
  <li><%= @winery.city %> <%= @winery.state %> <% @winery.zip %></li>
  <li><%= @winery.phone %></li>
</ul>

<p><%= @winery.description %></p>

<script type="text/javascript">

  var map;
  var myLatLng = {lat: <%= @winery.latitude %>, lng: <%= @winery.longitude %>}
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: myLatLng,
      zoom: 18
    });
  
  
  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Hello World!'
  });
  }

</script>

<% if logged_in? %>
  <div class: "main_edit">
      <%= form_for(@winery) do |f| %>
    <div class="both">
      <div class="left"><%= f.label :name %><br/>
      <%= f.text_field :name %></div>
      
      <div class="right"><%= f.label :website %><br/>
      <%= f.text_field :website %></div>
      
      <div class="left"><%= f.label :tasting_room_hours %><br/>
      <%= f.text_field :tasting_room_hours %></div>
      
      <div class="right"><%= f.label :seasonal %><br/>
      <%= f.text_field :seasonal %></div>
      
      <div class="left"><%= f.label :tasting_room_cost, "Cost:" %><br/>
      <%= f.text_field :tasting_room_cost %></div>

      <div class="right"><%= f.label :price_range, "Price Range:" %><br/>
      <%= f.text_field :price_range %></div>
      
      <div class="left"><%= f.label :reigon %><br/>
      <%= f.text_field :reigon %></div>
    </div>

    <div class="address_all"><%= f.label :street_address_1 %><br/>
    <%= f.text_field :street_address_1 %></div>
      
    <div class="address_all"><%= f.label :street_address_2 %><br/>
    <%= f.text_field :street_address_2 %></div>
      
    <div class="address">
      <div class="address_left"><%= f.label :city %></div>
      <div class="address_left"><%= f.text_field :city %></div>
      
      <div class="address_middle"><%= f.label :state %></div>
      <div class="address_middle"><%= f.text_field :state %></div>
      
      <div class="address_right"><%= f.label :zip %></div>
      <div class="address_right"><%= f.text_field :zip %></div>
    </div>
      
    <div class="address_all"><%= f.label :phone %><br/>
      <%= f.text_field :phone %>
    </div>
    
    <div class="both">
      <div class="left"><%= f.label :latitude %><br/>
      <%= f.text_field :latitude %></div>
      
      <div class="right"><%= f.label :longitude %><br/>
      <%= f.text_field :longitude %></div>
    </div><br/>

    <p><%= f.label :description, "Main Text" %><br/>
    <%= f.text_area :description, class: "winery_paragraph" %></p>
    
    <p><%= f.submit "Save changes", class: "btn btn-primary" %></p>
  <% end %> 
  </div>
<% end %>