<h1><%= @main.title %></h1>
<p><%= @main.paragraph %></p>

<%= form_for(@main) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  
  <%= f.label :paragraph, "Main Text" %>
  <%= f.text_area :paragraph %>
  
  <%= f.label :graphic, "Upload an image" %>
  <%= f.file_field :graphic %>
  
  <%= f.submit "Save changes", class: "btn btn-primary" %>
<% end %> 