<h1><%= @main.title %></h1>
<p><%= @main.paragraph %></p>

<% if logged_in? %>
  <div class: "main_edit">
  <%= form_for @main, html: { multipart: true } do |f| %>

    <p><%= f.label :title %><br/>
    <%= f.text_field :title, class: 'form-control' %></p>
  
    <p><%= f.label :paragraph, "Main Text" %><br/>
    <%= f.text_area :paragraph %></p>
  
    <p><%= f.label :graphic, "Upload the background image" %><br/>
    <%= f.file_field :graphic %></p>
  
    <p><%= f.submit "Save changes", class: "btn btn-primary" %></p>
  <% end %> 
  </div>
<% end %>